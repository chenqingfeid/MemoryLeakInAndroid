<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Leak!"
        android:textColor="#DF1313" />

    <Button
        android:id="@+id/asyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/staticAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Static AsyncTask"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/singleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Singleton"
        android:textAllCaps="false" />

    <TextView
      android:layout_width="match_parent"
      android:text="fixed"
      android:gravity="center"
      android:textColor="#93E620"
      android:padding="5dp"
      android:textStyle="bold"
      android:layout_height="wrap_content"/>


    <Button
      android:id="@+id/asyncTaskFixed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fixed AsyncTask"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/staticAsyncTaskFixed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fixed Static AsyncTask"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/threadFixed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fixed Thread"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/handlerFixed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fixed Handler"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/singletonFixed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Fixed Singleton"
      android:textAllCaps="false" />





</LinearLayout>
